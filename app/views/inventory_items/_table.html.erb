<table class = 'table'>
  <thead>
    <tr>
      <th>
        Item
        <% if user_is_principal %>
          <%= link_to '+', new_inventory_item_path, method: 'get' %>
        <% end %>
      </th>

      <th>
        Stock
        <% if user_is_principal %>
          <%= link_to '+', new_inventory_update_path(process: 're-stock'), method: 'get' %>
        <% end %>
      </th>
    </tr>
  </thead>
  
  <% @items.each do |item| %>
    <tbody>
      <tr>
        <td>
          <%= link_to item.name, inventory_item_path(item), method: 'get' %>
        </td>
        
        <td>
          <% if below_margin(item) %>
            <em style="color: red;">
              <%= ommit_zero_decimal(item.stock) %>
            </em>
          <% else %>
            <%= ommit_zero_decimal(item.stock) %>
          <% end %>
          
          <%= item.unit %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>
